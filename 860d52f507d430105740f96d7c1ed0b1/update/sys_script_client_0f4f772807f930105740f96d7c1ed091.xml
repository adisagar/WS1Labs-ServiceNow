<?xml version="1.0" encoding="UTF-8"?><record_update sys_domain="global" table="sys_script_client">
    <sys_script_client action="INSERT_OR_UPDATE">
        <active>true</active>
        <applies_extended>false</applies_extended>
        <condition/>
        <description>Make the WS1 UEM action read only if the Incidedent state is not New or Open.</description>
        <field>state</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>WS1UEMState</name>
        <order/>
        <script><![CDATA[function onChange() {
	// if the user has a WS1UEM role then set action to read only if not new or open
	var isStandard = g_user.hasRole('x_646971_uemconn_0.WS1UEMStandard');
	if (isStandard){	
		var currentstate = g_form.getValue('state');
		if (currentstate == 1 || currentstate == 2){
			g_form.setReadOnly('x_646971_uemconn_0_ws1command',false);
		}
		else {
			g_form.setReadOnly('x_646971_uemconn_0_ws1command',true);
		}	
	}
}	
]]></script>
